//
// Comments
//
pipeline {
    agent {
        label 'orion'
    }
    options {
        disableConcurrentBuilds()
        timestamps()
    }
    
    stages {
        stage ('Verify Parameters') {
            steps {
                echo 'Verify Parameters'
                echo "Base URL   is ${JENKINS_URL}"
                echo "Git Branch is ${GIT_BRANCH}"
                echo "Git Commit is ${GIT_COMMIT}"
                echo "Git URL    is ${GIT_URL}"
                script {
                    if (env.ghprbPullId != null) {
                        echo "======= THIS IS A PULL REQUEST ======"
                        echo "PR ID      is ${env.ghprbPullId}"
                        echo "PR LINK    is ${env.ghprbPullLink}"
                        echo "PR TITLE   is ${env.ghprbPullTitle}"
                        echo "PR SRC BR  is ${env.ghprbSourceBranch}"
                        echo "PR TRG BR  is ${env.ghprbTargetBranch}"
                    }
                }
            }
        }
        stage ('Compile') {
            steps {
                dir('src') {
                    sh "gcc -o ../bin/test1 test1.c"
                    sh "gcc -o ../bin/test2 test2.c"
                    sh "cppcheck --enable=warning --force --xml --xml-version=2 . 2> ../cppcheck.xml"
                }
            }
        }
        stage ('Test') {
            steps {
                sh "cd $WORKSPACE; bin/test1"
                sh "cd $WORKSPACE; bin/test2"
            }
        }
    }
    post {
        always {
            updateGithubCommitStatus(currentBuild)
        }
        success {
            script {
                if(fileExists('cppcheck.xml')) {
                    archiveArtifacts artifacts: 'cppcheck.xml'
                }
            }
        }
    }
}

def getRepoURL() {
  sh "git config --get remote.origin.url > .git/remote-url"
  return readFile(".git/remote-url").trim()
}
 
def getCommitSha() {
  sh "git rev-parse HEAD > .git/current-commit"
  return readFile(".git/current-commit").trim()
}
 
def updateGithubCommitStatus(build) {
  // workaround https://issues.jenkins-ci.org/browse/JENKINS-38674
  repoUrl = getRepoURL()
  commitSha = getCommitSha()
  jobMsg = "no message"
 
  step([
    $class: 'GitHubCommitStatusSetter',
    reposSource: [$class: "ManuallyEnteredRepositorySource", url: repoUrl],
    commitShaSource: [$class: "ManuallyEnteredShaSource", sha: commitSha],
    errorHandlers: [[$class: 'ShallowAnyErrorHandler']],
    statusResultSource: [
      $class: 'ConditionalStatusResultSource',
      results: [
        [$class: 'AnyBuildResult', state: build.currentResult, message: jobMsg]
      ]
    ]
  ])
}
